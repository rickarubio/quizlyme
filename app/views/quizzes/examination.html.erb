<h1 data-quiz-id=<%= @quiz.id %>>Now Testing: <%= @quiz.name %> (<%= @quiz.questions.count %> Questions)</h1>

<% @quiz.questions.each_with_index do |question, idx| %>
  <div class="panel panel-default question-list" data-question-id=<%= question.id %>>
    <div class="panel-heading">
      <h3 class="panel-title">Question #<%= idx + 1 %> - <%= question.text %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% question.choices.order(:created_at).each do |choice| %>
            <li class="list-group-item examination-choice" data-choice-id=<%= choice.id %>><%= choice.text %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
<button type="button" class="btn btn-lg btn-danger submit-examination">Submit my Answers</button>