<h1>Now Testing: <%= @quiz.name %> (<%= @quiz.questions.count %> Questions)</h1>

<% @quiz.questions.each_with_index do |question, idx| %>
  <div class="panel panel-default question-list">
    <div class="panel-heading">
      <h3 class="panel-title">Question #<%= idx + 1 %> - <%= question.text %></h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% question.choices.order(:created_at).each do |choice| %>
            <li class="list-group-item examination-choice"><%= choice.text %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>